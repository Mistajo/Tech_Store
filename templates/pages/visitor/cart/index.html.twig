{% extends "themes/base_visitor.html.twig" %}

{% block title %}
	- Votre Panier
{% endblock %}

{% block description %}{% endblock %}

{% block keywords %}{% endblock %}

{% block jQuery %}
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
{% endblock %}


{% block main %}
	<div class="container">

		<div class='mt-3'>
			{% for message in app.flashes('success') %}
				<div class="text-center alert alert-success alert-dismissible fade show" role="alert">
					{{message}}
					<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
				</div>
			{% endfor %}

			{% for message in app.flashes('warning') %}
				<div class="text-center alert alert-warning alert-dismissible fade show" role="alert">
					{{message}}
					<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
				</div>
			{% endfor %}
		</div>


		<section class="row">
			<div class="col-8">
				<h1 class='text-center my-3 display-5'>Votre Panier</h1>

				<table class="table">
					<thead>
						<tr class='text-center'>
							<th>#</th>
							<th>image</th>
							<th>Produit</th>
							<th>Quantité</th>
							<th>Prix</th>
							<th>Total</th>
							<th>Action</th>
						</tr>
					</thead>
					<tbody>
						{% for item in cart %}
							<tr>
								<td>#</td>
								<td>
									{% if item.product.images|length > 0 %}
										<img src="{{ asset('/uploads/images/thumbnails/' ~ item.product.images[0].name) }}" class="card-img" alt="{{ item.product.name }}">
									{% endif %}
								</td>

								<td>{{ item.product.name }}</td>
								<td>{{ item.quantity }}</td>
								<td>{{ (item.product.price)|number_format('2', '.', ' ')|format_currency('EUR', locale='fr')}}
								</td>

								<td>{{ (item.quantity * item.product.price)|number_format('2', '.', ' ')}}
									€
								</td>
								<td>
									<a title='Ajouter' href="{{path('visitor.cart.product.add',{'id': item.product.id})}}" class="btn btn-success">
										<i class="fa-solid fa-plus"></i>
									</a>


									<a title='Diminuer' href="{{path('visitor.cart.remove',{'id': item.product.id})}}" class="btn btn-warning">
										<i class="fa-solid fa-minus"></i>
									</a>


									<a title="Supprimer l'article du panier" href="#" class="btn btn-danger">
										<i class="fa-solid fa-trash"></i>
									</a>

								</td>


							{% else %}
								<tr>
									<td colspan="5">Votre panier est vide</td>
								</tr>
							{% endfor %}
							{% if cart|length == 0 %}
								<tr>
									<td colspan="7">Votre panier est vide</td>
								</tr>
							{% endif %}
						</tbody>
					</tbody>
					<tfoot>
						<tr>
							<td colspan="5">Total</td>
							<td>{{ (total)|number_format('2', '.', ' ')}}
								€
							</td>
							<td>
								<a title='vider le panier' href="{{path('visitor.cart.removeall')}}" class="btn btn-danger">
									<i class="fa-solid fa-trash"></i>
								</a>

							</td>
						</tr>
					</tfoot>
				</table>

				<a href="#" class="btn btn-primary">Valider le panier</a>
			</div>
		</section>
	</div>
{% endblock %}
