{% extends "themes/base_visitor.html.twig" %}

{% block title %}
	- Vente de Materiel Informatique
{% endblock %}

{% block description %}{% endblock %}

{% block keywords %}{% endblock %}

{% block jQuery %}
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
{% endblock %}


{% block main %}
	<div class="container">
		<h1 class="text-center my-3 display-5">Hello World</h1>

		<div class="row">
			<div class="col-md-3"></div>
			<div class="col-md-9">
				<div class="row">
					{% for product in products %}
						<div class="col-md-6 mb-4 d-flex justify-content-center">
							<div class="card mb-3 border shadow w-auto h-auto">
								<a href="#">
									{% if product.images|length > 0 %}
										<img src="{{ asset('/uploads/images/thumbnails/' ~ product.images[0].name) }}" class="card-img" alt="{{ product.name }}">
									{% endif %}
								</a>
								<div class="card-body">
									<h5 class="card-title">
										<strong>
											{{product.name}}
										</strong>
									</h5>
									<li>
										Stock :
										{{ product.Stock }}
										Personnes
									</li>

									{% if product.shortDescription is not empty %}
										<li class="class=card-text">Description :
											{{ product.shortDescription|striptags|u.truncate(70, '...')|raw }}
										</li>
									{% endif %}

									<li>
										Prix/unitaire :
										{{ product.price|format_currency('EUR', locale='fr') }}

									</li>


									<p class="my-2">
										<a href="#" class="btn btn-secondary">Voir DÃ©tails</a>
									</p>

								</div>
							</div>
						</div>


					{% endfor %}

				</div>

			</div>

		</div>

	</div>
{% endblock %}
