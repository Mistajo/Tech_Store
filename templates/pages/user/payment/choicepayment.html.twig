{% extends 'themes/base_user.html.twig' %}

{% block title %}
	- Commande
{% endblock %}

{% block description %}
	<meta name="description" content="Bienvenue sur le processus de paiement'. ">
{% endblock %}


{% block main %}
	<h1 class="text-center my-3 display-5">Récapitulatif de Commande
	</h1>

	<div class="container my-2">
		<div class="row">
			<div class="col-md-9"></div>
			<div class="col-md-3">
				<h5 class='my-3'>Récapitulatif de la commande</h5>

				<section class=' bg-body-secondary'>
					<div class='mx-2'>
						<h6>Articles</h6>
						{% for item in cart %}
							<div class=" d-flex justify-content-between mx-3">
								<p>{{item.quantity}}
									x
									{{ item.product.name|striptags|u.truncate(15, '...')|raw }}</p>

								<p>{{ (item.quantity * item.product.price)|number_format('2', '.', ' ')}}
									€</p>
							</div>
						{% endfor %}
					</div>
					<div class='mx-2 d-flex justify-content-between'>
						<h6>Livraison</h6>
						<p class=' text-light-emphasis mx-3'>{{ (order.carrierPrice)|number_format('2', '.', ' ') }}
							€</p>

					</div>

					<div class='d-flex justify-content-between mx-3'>
						<div>
							<h6>Total</h6>
						</div>

						<p class="text-danger" style="font-weight: bold;">
							{{ (total + order.carrierPrice) | format_currency('EUR', locale='fr') }}

						</p>
					</div>
				</section>
				<a class='btn btn-success my-2 rounded-5 w-100' href="">Valider ma commande</a>

			</div>
		</div>
	</div>
{% endblock %}
