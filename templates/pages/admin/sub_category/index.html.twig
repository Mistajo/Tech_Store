{% extends 'themes/base_admin.html.twig' %}


{% block title %}
	- Admin - Liste des Sous Categories
{% endblock %}

{% block description %}
	<meta name="description" content="Bienvenue sur la liste des sous categories. ">
{% endblock %}

{% block jQuery %}
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js" integrity="sha512-3gJwYpMe3QewGELv8k/BX9vcqhryRdzRMxVfq6ngyWXwo03GFEzjsUm8Q7RZcHPHksttq7/GFoxjCVUjkjvPdw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
{% endblock %}

{% block dataTables %}
	<link href="https://cdn.datatables.net/v/bs5/dt-1.13.6/datatables.min.css" rel="stylesheet">
	<script src="https://cdn.datatables.net/v/bs5/dt-1.13.6/datatables.min.js"></script>

	<script>
		$(document).ready(function () {
$('#table').DataTable({
language: {
url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/fr-FR.json'
},
order: [
[5, 'desc']
]
});
});
	</script>
{% endblock %}


{% block main %}
	<h1 class="text-center my-3 display-5">Liste des sous catégories</h1>

	{% for message in app.flashes('success') %}
		<div class="text-center alert alert-success alert-dismissible fade show" role="alert">
			{{message}}
			<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
		</div>
	{% endfor %}

	{% for message in app.flashes('warning') %}
		<div class="text-center alert alert-warning alert-dismissible fade show" role="alert">
			{{message}}
			<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
		</div>
	{% endfor %}

	<div class="d-flex justify-content-end align-items-center my-3">
		<a href="{{path('admin.sub_category.create')}}" class="btn btn-primary shadow">
			<i class="fa-solid fa-plus"></i>
			Nouvelle sous catégorie</a>
	</div>

	<div class="table-responsive">
		<table id="table" class="table table-striped table-hover text-center table-bordered">
			<thead class="table-primary text-white">
				<tr>
					<th class='text-center'>Id</th>
					<th class='text-center'>Categorie</th>
					<th class='text-center'>Name</th>
					<th class='text-center'>Slug</th>
					<th class='text-center'>Image</th>
					<th class='text-center'>Description</th>
					<th class='text-center'>Créé le</th>
					<th class='text-center'>Modifiée le</th>
					<th class='text-center'>Options</th>
				</tr>
			</thead>
			<tbody>
				{% for subcategory in subcategories|reverse %}
					<tr>
						<td>{{subcategory.id}}</td>
						{% if subcategory.category %}
							<td>{{subcategory.category.name}}</td>
						{% endif %}
						<td>{{subcategory.name}}</td>
						<td>{{subcategory.slug}}</td>
						<td>
							{% if subcategory.image %}
								<img src="{{ vich_uploader_asset(subcategory, 'imageFile') | imagine_filter('admin_category_thumbnail') }}" alt="{{ subcategory.name }}">
							{% else %}
								<p>---</p>
							{% endif %}
						</td>
						<td>{{subcategory.description}}</td>

						<td>{{subcategory.createdAt|date('d-m-Y H:i:s')}}</td>
						<td>{{subcategory.updatedAt|date('d-m-Y H:i:s')}}</td>
						<td>
							<a title="Modifier" href="{{path('admin.sub_category.edit', {'id': subcategory.id})}}" class="text-secondary m-2">
								<i class="fa-solid fa-pencil"></i>
							</a>
							<a onclick="event.preventDefault(); return confirm('Attention!! Voulez vous supprimer cette sous categorie. Continuer ?') && document.querySelector('#form_delete_subcategory_{{subcategory.id}}').submit();" title="Supprimer" href="#" class="text-danger m-2">
								<i class="fa-solid fa-trash-can"></i>
							</a>
							<form method="POST" id="form_delete_subcategory_{{subcategory.id}}" action="{{path('admin.sub_category.delete', {'id': subcategory.id})}}">
								<input type="hidden" name="csrf_token" value="{{csrf_token('delete_subcategory_'~subcategory.id)}}">
								<input type="hidden" name="_method" value="DELETE">
							</form>

						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>

{% endblock %}
